<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/signupHeader"
        style="@style/Header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:text="Profile Creation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signupSubheader"
        style="@style/SubHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Use the form below to submit your portfolio.\nAn email and password are required."
        app:layout_constraintEnd_toEndOf="@+id/signupHeader"
        app:layout_constraintStart_toStartOf="@+id/signupHeader"
        app:layout_constraintTop_toBottomOf="@+id/signupHeader" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_text_box_height"
        android:layout_marginStart="33dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/form_input_border"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/form_input_inner_padding"
        android:paddingRight="@dimen/form_input_inner_padding"
        android:textColorHint="@color/text_dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupSubheader" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_text_box_height"
        android:layout_marginTop="13dp"
        android:background="@drawable/form_input_border"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/form_input_inner_padding"
        android:paddingRight="@dimen/form_input_inner_padding"
        android:textColorHint="@color/text_dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/nameInput"
        app:layout_constraintStart_toStartOf="@+id/nameInput"
        app:layout_constraintTop_toBottomOf="@+id/nameInput" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_text_box_height"
        android:layout_marginTop="13dp"
        android:background="@drawable/form_input_border"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/form_input_inner_padding"
        android:paddingRight="@dimen/form_input_inner_padding"
        android:textColorHint="@color/text_dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/emailInput"
        app:layout_constraintStart_toStartOf="@+id/emailInput"
        app:layout_constraintTop_toBottomOf="@+id/emailInput" />

    <EditText
        android:id="@+id/websiteInput"
        android:layout_width="0dp"
        android:layout_height="@dimen/input_text_box_height"
        android:layout_marginTop="13dp"
        android:background="@drawable/form_input_border"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Website"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/form_input_inner_padding"
        android:paddingRight="@dimen/form_input_inner_padding"
        android:textColorHint="@color/text_dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/passwordInput"
        app:layout_constraintStart_toStartOf="@+id/passwordInput"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

    <Button
        android:id="@+id/button"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signupSubheader"
        app:layout_constraintStart_toStartOf="@+id/signupSubheader" />

</androidx.constraintlayout.widget.ConstraintLayout>