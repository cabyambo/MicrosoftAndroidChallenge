<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MicrosoftAndroidChallenge" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!--    Headers-->
    <style name="Header">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="SubHeader">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_dark_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body.Hyperlink" parent="Body">
        <item name="android:textColorLink">@color/blue_hyperlink</item>
    </style>
</resources>